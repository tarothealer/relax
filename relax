  <h1>💑 Việc Nhỏ Cho Hai Người</h1>
  <p class="intro">Hãy bấm nút để chọn một điều nhẹ nhàng cùng nhau làm tối nay nhé!</p>
  <button onclick="drawTask()">🎲 Rút việc</button>

  <div id="task"></div>

  <script>
    const tasks = [
      "🥛 Pha cho nhau một cốc sữa nóng hoặc một ly trà chanh mát lạnh",
      "🗣️ Ngồi xuống và trao đổi với nhau về chuyện đã xảy ra hôm nay",
      "🎬 Chọn một tập phim bất kỳ và cùng nhau xem",
      "📱 Cùng nhau nằm xem TikTok một lúc cho vui",
      "💆‍♀️ Time to massage – mỗi người 5 phút thư giãn nhẹ nhàng"
    ];

    function drawTask() {
      const task = tasks[Math.floor(Math.random() * tasks.length)];
      document.getElementById("task").innerText = task;
    }
  </script>
